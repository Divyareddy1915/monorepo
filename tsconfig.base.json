{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@integrated-poc1/api-interface": ["libs/api-interface/src/index.ts"],
      "@integrated-poc1/custom-lib-poc1": ["libs/custom-lib-poc1/src/index.ts"],
      "@integrated-poc1/data-access": ["libs/data-access/src/index.ts"],
      "@integrated-poc1/my-plugin": ["libs/my-plugin/src/index.ts"],
      "@integrated-poc1/new-preset-plugin": [
        "libs/new-preset-plugin/src/index.ts"
      ],
      "@integrated-poc1/ui-header": ["libs/ui-header/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
